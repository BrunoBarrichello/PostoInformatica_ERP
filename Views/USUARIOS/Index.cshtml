@model USUARIO;

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Index";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

<form asp-controller="USUARIOS" asp-action="Entrar" method="post">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-md-6 mb-3">
                <label for="Login">Login</label>
                <input type="text" class="form-control form-control-sm" id="Login" asp-for="NOME" />
            </div>
        </div>

        <div class="row justify-content-center text-center">
            <div class="col-md-6 mb-3">
                <label for="Senha">Senha</label>
                <input type="password" class="form-control form-control-sm" id="Senha" asp-for="SENHA" />
            </div>
        </div>

        <div class="row justify-content-center text-center">
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Entrar</button>
            </div>
        </div>
    </div>
</form>
