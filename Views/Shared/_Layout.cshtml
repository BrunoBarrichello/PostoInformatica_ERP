<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - PostoInformatica_ERP</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/Menu.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/PostoInformatica_ERP.styles.css" asp-append-version="true" />
    </head>
    <body>
        <div class="row">
            <div class="container_css add col-md-2" id="container_css">
                <div class="brand">
                    <h3 class="mt-1">Posto ERP</h3>
                    <a href="#" id="toggle"><i class="bi bi-list"></i></a>
                </div>
                <div class="navbar">
                    <ul>
                        <li>
                            <a href="#">
                                <i class="bi bi-house"></i>
                                <span>Home</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-hammer"></i>
                                <span>Obras</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-cart"></i>
                                <span>Compra</span>
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="bi bi-gear"></i>
                                <span>Configurações</span>
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="navbar">
                    <ul>
                        <li><a href="#"><i class="bi bi-box-arrow-in-right"></i><span>Log Out</span></a></li>
                    </ul>
                </div>
            </div>

            <div class="div-render-body col-md-10">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="https://kit.fontawesome.com/577a2a4a43.js" crossorigin="anonymous"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/_scriptMenu.js" asp-append-version="true"></script>

        <script>

            var toggle = document.getElementById("toggle");
            var container_css = document.getElementById("container_css");

            toggle.onclick = function () {
                container_css.classList.toggle('active');
            }

        </script>

        @await RenderSectionAsync("Scripts", required: false)

    </body>
</html>
